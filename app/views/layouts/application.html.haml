!!!
%html{:lang => 'ru'}
  %head
    = javascript_include_tag :application
    %meta{:charset => "utf-8"}
    %title= content_for?(:title) ? yield(:title) : "UWC 1+"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
  %body
    .navbar
      .navbar-inner
        .container-fluid
          .row-fluid
            %h1
              = yield :title


    .container-fluid
      .row-fluid
        .span10
          .well
            %h4
              - if flash[:success]
                #notice.message.text-success
                  = flash[:success]
                  = flash[:notice]
              - if flash[:error] or flash[:alert]
                #error.message.text-error.underlined
                  = flash[:error]
                  = flash[:alert]
              - elsif flash[:warning]
                #warning.message= flash[:warning]

            %div
              = yield


        .span2
          .well
            %div
              - if current_user
                = link_to "Log out", signout_path
                (#{current_user.email}).
                %br
                - if current_user.clouds.count >= 1
                  %br
                  %div Your preferred cloud:
                  %div.preferred_cloud_form
                    = render 'layouts/preferred_cloud_form'



      .row-fluid
        %br
        %br
        %br
        %br
        - if Rails.env.development?
          %pre= debug(params)
          %pre= session.to_yaml unless session.nil?